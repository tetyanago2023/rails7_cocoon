<div id="<%= dom_id project %>">
  <p>
    <strong>Name:</strong>
    <%= project.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= project.description %>
  </p>
  <h3>Tasks</h3>
  <div id="tasks">
    <% project.tasks.each do |task| %>
      <%= render partial: "tasks/project_task", locals: { task: task } %>
    <% end %>
  </div>
</div>
